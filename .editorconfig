root = true

[*.{js,ts,vue}]
resharper_disable_formatter=true

[*.{cs,js,ts,vue,styl}]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{tt}]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = false
end_of_line = crlf